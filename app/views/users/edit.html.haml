%h2 Edit my details

- content_for :header do
  :javascript
    window.skills_tags_objs = #{@skills_tags_json};
    window.interests_tags_objs = #{@interests_tags_json};
  
  = javascript_include_tag 'users/edit'



= simple_form_for @user, :url => user_path(@user) do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :bio, :hint => 'Textile supported'
  = f.input :twitter
  = f.input :bonjour
  = f.input :irc
  = f.input :skill_list, :input_html => { :value => @user.skill_list.sort }, :hint => 'enter tags, comma separated (Ex: javascript, rspec, rails)'
  = f.input :interest_list, :input_html => { :value => @user.interest_list.sort }, :hint => 'enter tags, comma separated (Ex: javascript, rspec, rails)'

  %p.submits
    = link_to 'Cancel', @user, :class => 'cancel'
    or
    = f.button :submit, :value => 'Save changes'

