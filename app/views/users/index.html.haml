- content_for :header do
  = javascript_include_tag 'vendor/jquery.dataTables-1.7.6.min'
  :javascript
    $(function(){
      $('table.users').dataTable({
        bJQueryUI: true,
        bPaginate: false,
        bLengthChange: false,
        bFilter: true,
        bSort: false,
        bAutoWidth: false
      });
    });

%h1 All the campers

%table.users
  %thead
    %tr
      %th
      %th Name
      %th Bonjour
      %th Twitter
      %th IRC
      %th Skills
      %th Interests
  %tbody
    - @users.each_with_index do |user, index|
      - row_class = index.even? ? 'even' : 'odd'
      %tr{:class => row_class}
        %td
          %img.profile_pic{:src => get_gravatar(user, 80)}
        %td= link_to user.full_name, user_path(user)
        %td= user.bonjour
        %td= user.twitter
        %td= user.irc
        %td= user.skill_list.join(', ')
        %td= user.interest_list.join(', ')

