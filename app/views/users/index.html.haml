%h1 All The Campers

%ul
  - @users.each do |user|
    %li
      = link_to user.full_name, user

%table.table
  %thead
    %tr.first
      %th Name
      %th Bonjour
      %th Twitter
      %th IRC
      %th Bio
      %th Skills
      %th Interests
      %th 
  %tbody
  - @users.each_with_index do |user, index|
    - row_class = index.even? ? 'even' : 'odd'
    %tr{:class => row_class}
      %td= user.full_name
      %td= user.bonjour
      %td= user.twitter
      %td= user.irc
      %td= user.bio
      %td= user.skill_list.join(', ')
      %td= user.interest_list.join(', ')
      %td= link_to('View', user_path(user))

