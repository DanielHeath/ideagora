%h1= @user.full_name

%p= link_to("edit my profile", edit_user_path(@user)) if current_user == @user

%p Email: #{@user.email}


%p Twitter username: #{@user.twitter}

%p Bonjour nick: #{@user.bonjour}

%p IRC nick: #{@user.irc}

%p= @user.try(:bio)

%p Skills: #{@user.skill_list.join(', ')}

%p Interests: #{@user.interest_list.join(', ')}

%h2 My projects
%p= link_to 'Add new project', new_user_project_path(@user)
  
- if @user.projects.any?
  %ol
    - for project in @user.projects
      %li
        %h3= link_to project.name, user_project_path(@user, project)
        %p= truncate(project.try(:description))
- else
  %p
    Tell us what you are working on&#8212;
    = link_to 'create a new project', new_user_project_path(@user)
    
